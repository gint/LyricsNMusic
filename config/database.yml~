# MySQL version 5.x
#   gem install mysql2
development:
  adapter: mysql2
  encoding: utf8
  database: LyricsNMusic_Dev
  pool: 5
  username: root
  password: admin
  host: localhost
  socket: /tmp/mysql.sock

